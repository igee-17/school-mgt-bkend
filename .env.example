# Service
SERVICE_NAME=school-mgmt
USER_PORT=5111
ENV=development

# Redis (required — used for Cortex, Oyster, Cache)
REDIS_URI=redis://127.0.0.1:6379
CORTEX_PREFIX=school-mgmt
OYSTER_PREFIX=school-mgmt
CACHE_PREFIX=school-mgmt:ch

# MongoDB (required)
MONGO_URI=mongodb://localhost:27017/school-mgmt

# JWT Secrets (required — use long random strings in production)
LONG_TOKEN_SECRET=change-me-long-secret-min-32-chars
SHORT_TOKEN_SECRET=change-me-short-secret-min-32-chars
NACL_SECRET=change-me-nacl-secret-min-32-chars

# Admin bootstrap (required — used to create the first superadmin account)
ADMIN_SECRET=change-me-admin-secret

# CORS (production only — comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com
